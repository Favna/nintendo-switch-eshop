{
  "name": "nintendo-switch-eshop",
  "version": "7.0.0",
  "workspaces": [
    "documentation/"
  ],
  "description": "Unofficial API lib for Nintendo Switch eShop game listing and pricing information.",
  "author": "favna",
  "license": "Apache-2.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "sideEffects": false,
  "homepage": "https://nintendo-switch-eshop-favna.vercel.app",
  "scripts": {
    "test": "jest",
    "lint": "eslint src tests documentation/src --ext mjs,js,ts,tsx --fix",
    "build": "tsc -b src && gen-esm-wrapper dist/index.js dist/index.mjs",
    "watch": "tsc -b src -w",
    "clean": "tsc -b src --clean",
    "sversion": "standard-version",
    "update": "yarn upgrade-interactive",
    "prepublishOnly": "yarn build",
    "prepare": "husky install .github/husky"
  },
  "dependencies": {
    "@sapphire/fetch": "^2.0.3",
    "@types/country-data": "^0.0.2",
    "country-data": "^0.0.31",
    "fast-xml-parser": "^3.21.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^14.1.0",
    "@commitlint/config-conventional": "^14.1.0",
    "@sapphire/eslint-config": "^4.0.5",
    "@sapphire/prettier-config": "^1.2.4",
    "@sapphire/ts-config": "^3.1.4",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "common-tags": "^1.8.2",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.2.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "gen-esm-wrapper": "^1.1.3",
    "husky": "^7.0.4",
    "jest": "^27.3.1",
    "jest-circus": "^27.3.1",
    "lint-staged": "^12.0.2",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2",
    "replace": "^1.2.1",
    "standard-version": "^9.3.2",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4"
  },
  "files": [
    "dist/",
    "!dist/*.tsbuildinfo"
  ],
  "engines": {
    "node": ">=10",
    "npm": ">=6"
  },
  "keywords": [
    "eshop",
    "switch",
    "nintendo",
    "crawler",
    "lib",
    "typescript"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/favna/nintendo-switch-eshop.git"
  },
  "bugs": {
    "url": "https://github.com/favna/nintendo-switch-eshop/issues"
  },
  "lint-staged": {
    "*.{mjs,js,ts}": "eslint --fix --ext mjs,js,ts"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "packageManager": "yarn@3.1.0"
}
